---
import BaseLayout from '../layouts/BaseLayout.astro';

const projectTitle = "Heritage Harvest Recipes: Rediscovering Culinary Roots";
const blogName = "heritage-harvest-recipes";
const blogTheme = "preserving and sharing traditional family recipes from different cultures";
const pageTitle = `Welcome to ${blogName}`;
const pageDescription = `Discover ${blogName}, a blog dedicated to ${blogTheme}.`;
---

<BaseLayout title={projectTitle} description={pageDescription}>
    <div class="hero bg-orange-100 py-20">
        <div class="container mx-auto text-center">
            <h1 class="text-5xl font-bold text-orange-700 mb-4">{pageTitle}</h1>
            <p class="text-lg text-gray-700 mb-8">We are excited to share recipes and stories that connect you to your culinary heritage.</p>
            <a href="/blog" class="bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded">Explore Recipes</a>
        </div>
    </div>

    <div class="container mx-auto py-12">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div class="">
                <h2 class="text-3xl font-semibold text-orange-700 mb-4">About {blogName}</h2>
                <p class="text-gray-700">{blogName} is a celebration of traditional family recipes. Our mission is to preserve culinary traditions and share them with a new generation of home cooks and food enthusiasts. From regional specialties to family favorites, we offer a diverse collection of recipes that capture the essence of heritage cuisine.</p>
            </div>
            <div>
                <h2 class="text-3xl font-semibold text-orange-700 mb-4">Submit Your Recipe</h2>
                <p class="text-gray-700">Do you have a cherished family recipe you'd like to share? We invite you to contribute to our collection and help us preserve culinary traditions for future generations.</p>
                <a href="/submit" class="bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded mt-4 inline-block">Submit a Recipe</a>
            </div>
        </div>
    </div>
</BaseLayout>